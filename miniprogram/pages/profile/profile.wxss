.profile{
  background: #E61A1A;
  height: 400rpx;
  text-align: center;
  position: relative;
  width: 100%;
}

.profile-img{
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
  border: 1rpx #fff;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 60rpx);
}

.profile-name{
  font-size: 36rpx;
  color: #fff;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 270rpx);
}

.desc {
  height: 200rpx;
  padding-top: 100rpx;
  text-align: center;
  color: #555;
  font-size: 24rpx;
  background: #EEEEEE;
}